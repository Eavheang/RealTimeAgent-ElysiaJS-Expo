{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    ".expo",
    "dist",
    "build"
  ],
  "dependencies": {
    "@types/react": "^19.2.8",
    "expo": "^54.0.31",
    "expo-av": "^16.0.8",
    "react": "^19.2.3",
    "react-native": "^0.83.1",
    "react-native-live-audio-stream": "^1.1.1",
    "react-native-safe-area-context": "^5.6.2"
  },
  "name": "frontend",
  "version": "1.0.0",
  "scripts": {
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "typescript": "~5.9.2"
  }
}
