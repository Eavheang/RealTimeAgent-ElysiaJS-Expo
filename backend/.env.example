# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Server Configuration
PORT=3000
NODE_ENV=development

# WebSocket Authentication
WS_AUTH_REQUIRED=true
WS_AUTH_TOKEN=your-auth-token-here

# CORS Configuration (adjust for production)
CORS_ORIGIN=*
CORS_ALLOWED_METHODS=GET, POST, OPTIONS
CORS_ALLOWED_HEADERS=Content-Type, Authorization

# Audio Configuration
# Maximum size of a single audio packet (default: 65536 bytes = 64KB)
MAX_AUDIO_PACKET_BYTES=65536

# Maximum audio buffer size per connection (default: 10485760 bytes = 10MB)
MAX_AUDIO_BUFFER_BYTES=10485760

# Minimum bytes before committing audio to OpenAI (default: 3200 bytes)
MIN_AUDIO_COMMIT_BYTES=3200

# Rate Limiting
WS_RATE_LIMIT_MESSAGES=100
WS_RATE_LIMIT_WINDOW_MS=1000

# Logging
LOG_LEVEL=debug  # trace, debug, info, warn, error, fatal
